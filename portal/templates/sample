<!DOCTYPE html>
<html>
<head>
  <title>Disable Count Until Checkbox Clicked</title>
</head>
<body>
  <form>
    <div>
      <label>
        <input type="checkbox" class="enableCheckbox" /> Enable Count 1
      </label>
      <input type="number" class="countInput" disabled value="0">
    </div>
    <div>
      <label>
        <input type="checkbox" class="enableCheckbox" /> Enable Count 2
      </label>
      <input type="number" class="countInput" disabled value="0">
    </div>
    <!-- Add more divs as needed for more counts -->

    <button type="button" onclick="resetCounts()">Reset Counts</button>
  </form>

  <script>
    const enableCheckboxes = document.querySelectorAll('.enableCheckbox');
    const countInputs = document.querySelectorAll('.countInput');

    // Function to update the counter for a specific input element
    function updateCounter(countInput) {
      countInput.value = parseInt(countInput.value) + 1;
    }

    // Event listeners for the checkboxes
    enableCheckboxes.forEach((checkbox, index) => {
      checkbox.addEventListener('change', function () {
        const countInput = countInputs[index];

        if (checkbox.checked) {
          // If the checkbox is checked, enable the input and start counting
          countInput.disabled = false;
          countInput.value = parseInt(countInput.value) || 0; // Start with 0 if the input value is empty
          countInput.addEventListener('input', function () {
            countInput.value = parseInt(countInput.value) || 0;
          });
        } else {
          // If the checkbox is unchecked, disable the input and stop counting
          countInput.disabled = true;
        }
      });
    });

    // Function to reset all counts to 0
    function resetCounts() {
      countInputs.forEach(countInput => {
        countInput.value = 0;
        countInput.disabled = true;
      });

      enableCheckboxes.forEach(checkbox => {
        checkbox.checked = false;
      });
    }
  </script>
</body>
</html>